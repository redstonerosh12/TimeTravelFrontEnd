<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tripItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_rectangle_with_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tripCountry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@raw/varela_round_regular"
            android:paddingLeft="25dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:text="Country"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|end"
            android:layout_weight="0.2"
            android:contentDescription="trip_arrow"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ui_element_dropdown_button_collapsed" />
    </LinearLayout>